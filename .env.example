# Copy to .env and adjust values for your environment

# Database connection
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/bioforensics
# Default fallback is SQLite: sqlite:///bioforensics.db

# Embedding model (default is all-MiniLM-L6-v2)
BIOFX_EMBED_MODEL=all-MiniLM-L6-v2

# Device for embeddings (options: "cpu", "cuda", "mps", or leave blank for auto)
BIOFX_DEVICE=cpu

# FAISS index file path (where the vector index will be stored)
BIOFX_INDEX_PATH=index/faiss.index

# Logging level (DEBUG, INFO, WARNING, ERROR)
BIOFX_LOG_LEVEL=INFO